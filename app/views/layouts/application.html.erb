          </a>
          <a class="brand" href="/">Rentail</a>
          <div class="nav-collapse collapse navbar-inverse-collapse">
            <ul class="nav">
              <li><%= link_to t("deposit"), "/deposits"  %></li>
            </ul>

            <form class="navbar-search pull-left">
